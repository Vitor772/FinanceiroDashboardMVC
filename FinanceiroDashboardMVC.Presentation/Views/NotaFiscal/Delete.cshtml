@model FinanceiroDashboardMVC.Domain.Entities.NotaFiscal

@{
    ViewData["Title"] = "Excluir Nota Fiscal";
}

<div id="content">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button type="button" id="sidebarCollapse" class="btn-toggle">
            <i class="fas fa-bars"></i>
        </button>
        <h4 class="ml-3 mb-0">Dashboard Financeira</h4>
    </nav>

    <h3>Deseja realmente excluir esta nota fiscal?</h3>

    <div class="form-group">
        <label>Descrição:</label>
        <p>@Model.Descricao</p>
    </div>
    <div class="form-group">
        <label>Categoria:</label>
        <p>@Model.Categoria</p>
    </div>
    <div class="form-group">
        <label>Valor:</label>
        <p>R$ @Model.Valor.ToString("N2")</p>
    </div>
    <div class="form-group">
        <label>Status:</label>
        <p>@Model.Status</p>
    </div>
    <div class="form-group">
        <label>Data de Emissão:</label>
        <p>@Model.Data.ToString("dd/MM/yyyy")</p>
    </div>

    <p>Tem certeza que deseja excluir esta nota?</p>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
    </form>
</div>
